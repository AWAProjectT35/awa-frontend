.container {
    max-width: 1800px;
}

.newOrders {
    display: flex;
    flex-direction: column;
    margin-bottom: 75px;
}

.rowOrders, .rowProduct {
    display: flex;
    border-bottom: 1px solid lightgray;
}

.rowOrders:hover {
    color: red;
    background-color: rgba(211, 211, 211, 0.1);
}

.headersOrder, .headersProduct {
    display: flex;
    margin-bottom: 6px;
}

.headersOrder {
    font-weight: bold;
}

.rowProduct, .headersProduct {
    margin-bottom: 1px;
}

.rowLink {
    text-decoration: none;
}

.cell {
    width: 200px;
}